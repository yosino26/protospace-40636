<h1>ユーザー情報編集</h1>

<%= form_with model: resource, url: registration_path(resource_name), local: true do |f| %>
  <div>
    <%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div>
    <%= f.label :password, "新しいパスワード" %><br>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <p>(空欄のままにするとパスワードは変更されません)</p>
  </div>

  <div>
    <%= f.label :password_confirmation, "パスワード確認" %><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.label :current_password, "現在のパスワード" %><br>
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div>
    <%= f.label :name, "ユーザー名" %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :profile, "プロフィール" %><br>
    <%= f.text_area :profile %>
  </div>

  <div>
    <%= f.label :occupation, "所属" %><br>
    <%= f.text_area :occupation %>
  </div>

  <div>
    <%= f.label :position, "役職" %><br>
    <%= f.text_area :position %>
  </div>

  <div>
    <%= f.submit "更新" %>
  </div>
<% end %>
